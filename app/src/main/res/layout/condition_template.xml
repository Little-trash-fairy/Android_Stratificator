<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/cond_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cond_del_btn"
        android:hint="@string/condition_edit_text_sting_res" />

    <Button
        android:id="@+id/cond_del_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cond_edittext"
        android:layout_alignParentEnd="true"
        android:text="@string/Elem_delete_res_string" />
</RelativeLayout>